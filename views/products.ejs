<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" type="text/css" href="/styles.css"/>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@200&family=Poppins:ital,wght@0,200;1,200&family=Roboto:wght@100;300&display=swap" rel="stylesheet">
</head>
<body>
    <div class = "list-products">
    <h1>Lista de productos</h1>
    <div class = "list-products__items">
    <% if (typeof products !== 'undefined'){ %>
        <% products.forEach( product => { %>
            <div style= "display:flex">
            <h3>Producto: <%= product.title %></h3>
            <h3>Precio: <%= product.price %></h3>
            <img src = <%= product.thumbnail %>>
            </div>
        <% }) %>
    <% }else{ %>
        <h3>No hay productos</h3>
    <% } %>
    </br>
    <a href="/"> <h3>Volver a pagina principal</h3></a>
    </div>
    </div>
    <div id="chat">
        <h2>Chat de la pagina</h2>
        <div id="chat-window">
            <div id="output"></div>
        </div>
        <input id="handle" type="text" placeholder="Mail" />
        <input id="message" type="text" placeholder="Mensaje" />
        <button id="send">Send</button>
    </div>

</body>
<script src="/socket.io/socket.io.js"></script>
<script src = "/chat.js"></script>
</html>